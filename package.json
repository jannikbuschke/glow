{
  "name": "root",
  "private": true,
  "scripts": {
    "first-start": "npm install && npm run bootstrap && npm run tsc && npm run start",
    "bootstrap": "lerna bootstrap --hoist --force-local",
    "start:lerna": "lerna run start --stream",
    "watch": "lerna run watch --stream",
    "tsc:lerna": "lerna run tsc --stream",
    "lerna": "lerna",
    "tsc": "npm run tsc --workspaces --if-present",
    "tsc:all": "npm run tsc",
    "tsc:watch": "npm run tsc:watch --workspaces --if-present",
    "build": "npm run build --workspace=gertrud-vite",
    "start": "npm run start --workspace=gertrud-vite"
  },
  "version": "0.1.0",
  "main": "index.js",
  "engines": {
    "node": "^16.14.0",
    "npm": "^8.5.0"
  },
  "workspaces": [
    "core-web",
    "glow.azure-web",
    "glow.beta-web",
    "glow.mantine-web",
    "shared",
    "sample.cs/web",
    "sample.treasure-island.cs/web",
    "samples/treasure-island.fs/web",
    "sample.fs/web",
    "react-hexgrid"
  ],
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.22.0",
    "@changesets/types": "5.0.0",
    "typescript": "4.3.5"
  }
}
